<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.javastart.mp3player.controller.MainController">
   <top>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <MenuBar layoutX="8.0" layoutY="6.0">
              <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="fileMenuItem" mnemonicParsing="false" text="Open Mp3 file" />
                        <MenuItem fx:id="dirMenuItem" mnemonicParsing="false" text="Open directory" />
                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children></AnchorPane>
   </top>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="contentTable" layoutX="-2.0" layoutY="-2.0" prefHeight="127.0" prefWidth="243.0">
              <columns>
                <TableColumn prefWidth="67.0" text="C1" />
                <TableColumn prefWidth="83.0" text="C2" />
              </columns>
            </TableView>
         </children></AnchorPane>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="prevButton" mnemonicParsing="false" text="Button" />
            <ToggleButton fx:id="playButton" mnemonicParsing="false" text="ToggleButton" />
            <Button fx:id="nextButton" mnemonicParsing="false" text="Button" />
            <Slider fx:id="volumeSlider" />
            <Slider fx:id="songSlider" />
         </children></HBox>
   </bottom>
</BorderPane>
